<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Front-End Chronicles</title>
    <meta
      name="description"
      content="Podcast nantais indépendant créé par deux devs passionnés : Benjamin Auzanneau et Denis Souron."
    />
    <link rel="icon" href={hero.avatar} />
  </head>
  <body>
    <main class="page-shell">
      <div class="layout">
        <section class="hero">
          <div class="avatar">
            <img src={hero.avatar} alt="Front-End Chronicles" loading="lazy" />
          </div>
          <h1>{hero.title}</h1>
          <p>{hero.description}</p>
        </section>

        {sections.map((section) => (
          <section class="section-block" style={`--accent:${section.accent || '#55ACEE'}`}>
            <div class="card section" style={`--accent:${section.accent || '#55ACEE'}`}>
              <p>{section.title}</p>
            </div>
            <div class="cards">
              {section.items.map((card) =>
                card.type === 'map' ? (
                  <a
                    class="card map"
                    href={card.href}
                    style={`--accent:${card.accent || '#1EA3FF'}`}
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    <div class="card-inner">
                      <div class="badge" aria-hidden="true"></div>
                      <div class="card-meta">
                        <div class="card-title">{card.title}</div>
                        <div class="card-subtitle">Voir sur Google Maps</div>
                      </div>
                    </div>
                    <div class="map-frame">
                      <iframe
                        src={card.embed}
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade"
                        title="Nantes, France"
                      ></iframe>
                      <div class="map-label">Nantes</div>
                    </div>
                  </a>
                ) : (
                  <a
                    class="card"
                    href={card.href}
                    style={`--accent:${card.accent || '#111827'}`}
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    <div class="card-inner">
                      <div class="badge" aria-hidden="true"></div>
                      <div class="card-meta">
                        <div class="card-title">{card.title}</div>
                        {card.subtitle && <div class="card-subtitle">{card.subtitle}</div>}
                      </div>
                    </div>

                    {card.image ? (
                      <div class="thumb" style={`background-image:url('${card.image}')`} role="presentation"></div>
                    ) : (
                      <div class="thumb placeholder" aria-hidden="true"></div>
                    )}
                  </a>
                )
              )}
            </div>
          </section>
        ))}
      </div>
    </main>
  </body>
</html>
